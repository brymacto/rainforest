<div class="userinfo">
  <% if current_user %>
  Signed in as <%= link_to (current_user.name || "unnamed user"), user_path(current_user) %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
  <% else %>
  <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
  <% end %>
</div>
