<h2>User: <%= @user.name %></h2>
<% if @user == current_user %>
<nav>
  <ul>
    <li><%= link_to "Edit your profile",  edit_user_path(current_user) %></li>
  </ul>
</nav>


<table class="user">
  <tr>
    <th>Name:</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>Email:</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>Reviews:</th>
    <td>
      <% @reviews.each do |review| %>


      <% if Product.find_by(id: review.product_id) %>
<h4>Review of <%= link_to Product.find(review.product_id).name, product_path(Product.find(review.product_id)) %></h4>
      <% end %>


