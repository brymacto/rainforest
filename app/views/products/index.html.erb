<h1>Product Listings</h1>

<% @products.each do |product| %>

<article class="thumb">
  <%= link_to product.name, "/products/#{product.id}", class: "name" %><div class="price">$<%= product.formatted_price %></div>
  <div class="description"><%= product.description %></div>

  </article>


<% end %>
